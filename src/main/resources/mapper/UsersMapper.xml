<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acgm.acgmmediatracker.mapper.UsersMapper">

    <resultMap id="UsersResultMap" type="com.acgm.acgmmediatracker.entity.Users">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="email" column="email" />
        <result property="emailNorm" column="email_norm" />
        <result property="password" column="password" />
        <result property="role" column="role" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="Users_Columns">
        id,
        username,
        email,
        email_norm,
        password,
        role,
        created_at,
        updated_at
    </sql>

    <select id="selectById" resultMap="UsersResultMap">
        SELECT <include refid="Users_Columns" />
        FROM users
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="UsersResultMap">
        SELECT <include refid="Users_Columns" />
        FROM users
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.acgm.acgmmediatracker.entity.Users">
        INSERT INTO users (
            username,
            email,
            password,
            role,
            created_at,
            updated_at
        ) VALUES (
            #{username},
            #{email},
            #{password},
            #{role},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

    <update id="update" parameterType="com.acgm.acgmmediatracker.entity.Users">
        UPDATE users
        SET
            username = #{username},
            email = #{email},
            password = #{password},
            role = #{role},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM users
        WHERE id = #{id}
    </delete>

</mapper>
